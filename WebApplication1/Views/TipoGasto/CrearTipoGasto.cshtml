@{
    ViewData["Title"] = "Cargar nuevo tipo de gasto";
}

<div class="container mt-5" style="max-width: 700px;">

    <div class="card shadow-sm">
        <div class="card-header text-white" style="background-color: #0d6efd;">
            <h3 class="mb-0">Cargar nuevo tipo de gasto</h3>
        </div>

        <div class="card-body">

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Mensaje
                </div>
            }

            <form method="post" action="/TipoGasto/CrearTipoGasto">

                <div class="mb-3">
                    <label class="form-label fw-semibold">Nombre</label>
                    <input type="text" name="nombre" class="form-control" placeholder="Ej: Transporte" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Descripción</label>
                    <input type="text" name="descripcion" class="form-control" placeholder="Ej: Traslados internos" required />
                </div>

                <button type="submit" class="btn text-white w-100"
                        style="background-color: #0d6efd;">
                    Guardar
                </button>

            </form>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-header bg-light">
            <h4 class="mb-0">Tipos de gasto existentes</h4>
        </div>

        <div class="card-body">

            @if (ViewBag.Tipos != null && ViewBag.Tipos.Count > 0)
            {
                <ul class="list-group">
                    @foreach (var t in ViewBag.Tipos)
                    {
                        <li class="list-group-item">
                            <b>@t.Nombre</b> — @t.Descripcion
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">No hay tipos de gasto cargados.</p>
            }

        </div>
    </div>

</div>


