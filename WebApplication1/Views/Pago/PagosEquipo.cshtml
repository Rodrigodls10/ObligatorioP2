@model List<Dominio.Pago>

@{
    ViewData["Title"] = "Pagos del equipo";

    int mesActual;
    int anioActual;

    if (ViewBag.Mes != null)
    {
        mesActual = (int)ViewBag.Mes;
    }
    else
    {
        mesActual = DateTime.Now.Month;
    }

    if (ViewBag.Anio != null)
    {
        anioActual = (int)ViewBag.Anio;
    }
    else
    {
        anioActual = DateTime.Now.Year;
    }
}

<div class="container mt-5" style="max-width: 900px;">

    <div class="text-center mb-4">
        <h2 class="fw-bold" style="color: #0d6efd;">Pagos del equipo</h2>
        <p class="text-muted">Listado de los pagos realizados por tu equipo en el mes seleccionado</p>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <form method="post" class="row g-3 mb-4">
        <div class="col-md-3">
            <label class="form-label">Mes</label>
            <input type="number" name="mes" class="form-control" min="1" max="12" value="@mesActual" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Año</label>
            <input type="number" name="anio" class="form-control" value="@anioActual" />
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Filtrar</button>
        </div>
    </form>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            No hay pagos registrados para ese mes y año.
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Tipo</th>
                    <th>Descripción</th>
                    <th>Fecha</th>
                    <th>Monto base</th>
                    <th>Monto con beneficio / recargo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Usuario.Email</td>
                        <td>@p.ObtenerTipo()</td>
                        <td>@p.Descripcion</td>
                        <td>@p.ObtenerFecha().ToString("dd/MM/yyyy")</td>
                        <td>@p.Monto.ToString("0.00")</td>
                        <td>@p.CalcularTotal().ToString("0.00")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

