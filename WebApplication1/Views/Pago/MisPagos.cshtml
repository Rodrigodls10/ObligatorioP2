@model List<Dominio.Pago>

    @{
    ViewData["Title"] = "Mis Pagos";
    }

    <div class="container mt-5" style="max-width: 900px;">

        <div class="text-center mb-4">
            <h2 class="fw-bold" style="color: #0d6efd;">Mis pagos del mes</h2>
            <p class="text-muted">Listado de todos los pagos que registraste este mes</p>
        </div>

        @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            No registraste pagos este mes.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover shadow-sm">
            <thead style="background-color: #0d6efd; color: white;">
                <tr>
                    <th scope="col">Tipo</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Monto base</th>
                    <th scope="col">Total calculado</th>
                    <th scope="col">Fecha</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var p in Model)
                {
                <tr>
                    <td>
                        <span class="badge bg-primary">@p.ObtenerTipo()</span>
                    </td>

                    <td>@p.Descripcion</td>

                    <td>$ @p.Monto.ToString("0.00")</td>

                    <td class="fw-bold">$ @p.CalcularTotal().ToString("0.00")</td>

                    <td>@p.ObtenerFecha().ToString("dd/MM/yyyy")</td>
                </tr>
                }
            </tbody>
        </table>
    }
    </div>

